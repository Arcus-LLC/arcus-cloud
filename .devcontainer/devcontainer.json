{
  "name": "mise",
  "image": "ghcr.io/jdx/mise:2026.1.0",
  "mounts": [
    //* Data volume for installed tools.
    //* This avoids Github public api rate limits if rebuilding the container too frequently.
    "source=mise-data-volume,target=/mise,type=volume"
  ],
  "runArgs": [
    "--network=host", //* Allow host networking
    "--pull=always", //* Always pull the latest version
    "--security-opt=no-new-privileges:true" //* Prohibits privilege escalation
  ],
  "postCreateCommand": "pip install pipx && mise install"
}