apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: cnpg
  namespace: flux-system
spec:
  interval: 15m
  chartRef:
    kind: OCIRepository
    name: cnpg-operator
  targetNamespace: cnpg-system
  install:
    remediation:
      retries: 3
    createNamespace: true
  upgrade:
    remediation:
      retries: 3
      remediateLastFailure: true
    crds: CreateReplace
  dependsOn:
    - name: longhorn
      namespace: longhorn-system
  values:
    monitoring:
      podMonitorEnabled: true # Enables PodMonitor for metrics scraping by Prometheus
    image:
      pullPolicy: IfNotPresent
    securityContext:
      runAsNonRoot: true
      allowPrivilegeEscalation: false
    # For reliability, enable high availability
    cluster:
      instances: 3
      primaryUpdateStrategy: unsupervised
